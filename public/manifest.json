{
  "manifest_version": 3,
  "name": "Daily Qoran",
  "icons": {
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "version": "1.0.0",
  "action": {
    "default_title": "Click to open the panel"
  },
  "permissions": ["sidePanel"],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
